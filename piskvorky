import random

nahoda = ["ğŸ¤ ","ğŸ¥¶","â˜ ","ğŸ‘»","ğŸ§","ğŸ‘»","ğŸ¤¡","ğŸ’©","ğŸ‘½","ğŸ¤–","ğŸ¥µ","ğŸ‘€","ğŸ§","ğŸ¤•","ğŸ","ğŸ—","ğŸ¦š","ğŸ˜","ğŸ","ğŸ‘»","ğŸ¦","ğŸ¤–","ğŸ","ğŸ˜±","ğŸ•¸","âš½","ğŸ","ğŸ‘»"]

sirka = int(input("Zadej Å¡Ã­Å™ku: "))
vyska = int(input("Zadej vÃ½Å¡ku: "))

hraci_symbol = input("Zadej svÅ¯j symbol: ")

mode = input("Vyber reÅ¾im hry (p - proti poÄÃ­taÄi, h - proti hrÃ¡Äi): ")
if mode == 'p':
    protihrac_symbol = random.choice(nahoda)
else:
    protihrac_symbol = input("Zadej symbol pro protihrÃ¡Äe: ")

herni_plocha = [['â¬›' for _ in range(sirka)] for _ in range(vyska)]

def tiskni_herni_plochu(plocha):
    for radek in plocha:
        print(' '.join(radek))

def zkontroluj_vyhru(plocha, symbol):
    # Kontrola vodorovnÃ½ch Å™Ã¡dkÅ¯
    for radek in plocha:
        for i in range(len(radek) - 2):
            if all(policko == symbol for policko in radek[i:i+3]):
                return True

    # Kontrola svislÃ½ch sloupcÅ¯
    for sloupec in range(len(plocha[0])):
        for radek in range(len(plocha) - 2):
            if all(plocha[radek+i][sloupec] == symbol for i in range(3)):
                return True

    # Kontrola diagonÃ¡l zleva doprava
    for radek in range(len(plocha) - 2):
        for sloupec in range(len(plocha[0]) - 2):
            if all(plocha[radek+i][sloupec+i] == symbol for i in range(3)):
                return True

    # Kontrola diagonÃ¡l zprava doleva
    for radek in range(len(plocha) - 2):
        for sloupec in range(2, len(plocha[0])):
            if all(plocha[radek+i][sloupec-i] == symbol for i in range(3)):
                return True

    return False

while True:
    tiskni_herni_plochu(herni_plocha)

    # Tah hrÃ¡Äe
    radek = int(input("Zadej ÄÃ­slo Å™Ã¡dku: ")) - 1
    sloupec = int(input("Zadej ÄÃ­slo sloupce: ")) - 1

    herni_plocha[radek][sloupec] = hraci_symbol

    if zkontroluj_vyhru(herni_plocha, hraci_symbol):
        print("Gratuluji, vyhrÃ¡l jsi!")
        break

    # Tah protihrÃ¡Äe
    if mode == 'p':
        while True:
            radek = random.randint(0, vyska-1)
            sloupec = random.randint(0, sirka-1)
            if herni_plocha[radek][sloupec] == 'â¬›':
                herni_plocha[radek][sloupec] = protihrac_symbol
                break
    else:
        radek = int(input("Zadej ÄÃ­slo Å™Ã¡dku: ")) - 1
        sloupec = int(input("Zadej ÄÃ­slo sloupce: ")) - 1
        herni_plocha[radek][sloupec] = protihrac_symbol

    if zkontroluj_vyhru(herni_plocha, protihrac_symbol):
        print("ProtihrÃ¡Ä vyhrÃ¡l!")
        break
